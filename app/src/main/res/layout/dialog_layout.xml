<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg">

    <ImageView
        android:id="@+id/custom_exit"
        android:layout_gravity="right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/cancel"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:weightSum="9"

        >
        <TextView
            android:id="@+id/dialog_welcome_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/dialog_button"

            android:text="ADD CHART"/>

        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="0.5"-->
        <!--android:src="@drawable/change_logo"/>-->

        <TextView
            android:id="@+id/typefood_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Chose type for food"
            android:textAlignment="center"
            android:textSize="10dp"/>

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

        </Spinner>

        <TextView
            android:id="@+id/dialog_quantity_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:text="Quantity"
            android:textColor="@color/dialog_button"
            />

        <Spinner
            android:id="@+id/quantity_spinner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></Spinner>


        <Button
            android:id="@+id/add_chart"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/dialog_button"
            android:text="Add Chart"/>



    </LinearLayout>


</LinearLayout>